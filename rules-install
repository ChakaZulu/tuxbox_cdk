# install rules for cdk
#
# fields (separated by ';')
#   name
#   rules ('make', 'install', 'link') and arguments
#   ...
#

#
# core
#
linux
binutils;make:install
bootstrap_gcc
glibc;make:install:install_root=TARGET
gcc;make:install

#
# minimal root
#
busybox;make:install:PREFIX=TARGET
tinylogin;make:install:PREFIX=TARGET
modutils;make:install-bin
inetd;install:-m755:inetd:TARGET/sbin
ftpd;install:-m755:vsftpd:TARGET/sbin/in.ftpd;install:-m644:vsftpd-dbox2.conf:TARGET/etc/vsftpd.conf;install:-d:TARGET/share/empty
rsh;make:install:PREFIX=TARGET
telnetd;install:-m755:telnetd:TARGET/sbin/in.telnetd
procps;install:-m755:top:ps/ps:TARGET/bin

#
# contrib libs
#
libcrypto;install:libcrypto.so.0.9.6:TARGET/lib;link:libcrypto.so.0.9.6:TARGET/lib/libcrypto.so.0;link:libcrypto.so.0:TARGET/lib/libcrypto.so;install:libssl.so.0.9.6:TARGET/lib;link:libssl.so.0.9.6:TARGET/lib/libssl.so.0;link:libssl.so.0:TARGET/lib/libssl.so;install:-d:TARGET/include/openssl;make:-C:crypto:install:INSTALL_PREFIX=TARGET:INSTALLTOP=;make:-C:ssl:install:INSTALL_PREFIX=TARGET:INSTALLTOP=;install:-m644:e_os2.h:TARGET/include/openssl
libcurl;make:install;link:TARGET/bin/curl-config:HOST/bin
libffi;make:install
libfreetype;make:install;link:TARGET/bin/freetype-config:HOST/bin/freetype-config
libncurses;make:install.libs:install.includes
libjpeg;make:install-lib:install-headers
libpng;make:install:prefix=TARGET
libqt;install:src/moc/moc:HOST/bin
libreadline;make:install
libsdl;make:install;link:TARGET/bin/sdl-config:HOST/bin/sdl-config
libxml2;make:install;link:TARGET/bin/xml2-config:HOST/bin/xml2-config
libz;make:install

#
# contrib apps
#
console_data;make:install
console_tools;make:install
fbset;install:-m755:fbset:TARGET/bin
ssh;make:install-nokeys:prefix=TARGET

#
# msttf
#
cabextract;make:install
msttf

#
# development tools
#
gdb;make:install
strace;make:install
nano;make:install

#
# java
#
kaffe;make:install
kaffeh;make:install

#
# fun stuff
#
scummvm;install:-m755:scummvm:TARGET/bin

#
# dvb apps
#
dvbstream;install:-m755:dvbstream:TARGET/bin
dvbtext;install:-m755:dvbtext:TARGET/bin
dvbtune;install:-m755:dvbtune:TARGET/bin

