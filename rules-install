# install rules for cdk
#
# fields (separated by ';')
#   name
#   rules ('make', 'install', 'link', 'archive') and arguments
#   ...
#

#
# core
#
linux
binutils;make:install
bootstrap_gcc
bootstrap_gcc_2_95;make:install;install:HOST/bin/powerpc-tuxbox-linux-gnu-gcc:HOST/bin/powerpc-tuxbox-linux-gnu-gcc-2.95;install:HOST/powerpc-tuxbox-linux-gnu/bin/gcc:HOST/powerpc-tuxbox-linux-gnu/bin/gcc-2.95
glibc;make:install:install_root=TARGET
uclibc;make:install:DEVEL_PREFIX=TARGET;install:-m644:lib/libc.a:TARGET/lib/libc_pic.a;install:-m644:lib/libcrypt.a:TARGET/lib/libcrypt_pic.a;install:-m644:lib/libm.a:TARGET/lib/libm_pic.a;
gcc;make:install

#
# root
#
busybox;make:install:PREFIX=TARGET
ftpd;install:-m755:vsftpd:TARGET/sbin/in.ftpd;install:-m644:vsftpd-dbox2.conf:TARGET/etc/vsftpd.conf;install:-d:TARGET/share/empty
ifupdown;make:install:BASEDIR=TARGET
inetd;install:-m755:inetd:TARGET/sbin
modutils;make:install-bin
netkit_telnet;install:-m755:telnet/telnet:TARGET/bin/telnet;install:-m755:telnetd/telnetd:TARGET/sbin/in.telnetd
portmap;make:install:BASEDIR=TARGET
procps;install:-m755:top:ps/ps:TARGET/bin
rsh;make:install:PREFIX=TARGET
tinylogin;make:install:PREFIX=TARGET

#
# contrib libs
#
libcrypto;install:libcrypto.so.0.9.6:TARGET/lib;link:libcrypto.so.0.9.6:TARGET/lib/libcrypto.so.0;link:libcrypto.so.0:TARGET/lib/libcrypto.so;install:libssl.so.0.9.6:TARGET/lib;link:libssl.so.0.9.6:TARGET/lib/libssl.so.0;link:libssl.so.0:TARGET/lib/libssl.so;install:-d:TARGET/include/openssl;make:install_cdk:INSTALL_PREFIX=TARGET:INSTALLTOP=
libcurl;make:install;link:TARGET/bin/curl-config:HOST/bin
libcommoncplusplus;make:install
libdvbpsi;make:install
libffi;make:install
libfreetype;make:install;link:TARGET/bin/freetype-config:HOST/bin/freetype-config
libncurses;make:install.libs:install.includes
libjpeg;make:install-lib:install-headers
libpcap;make:install
libpopt;make:install
libpng;make:install:prefix=TARGET
libqt;install:src/moc/moc:HOST/bin
libreadline;make:install
libsdl;make:install;link:TARGET/bin/sdl-config:HOST/bin/sdl-config
libsigc;make:install;link:TARGET/bin/sigc-config:HOST/bin/sigc-config
libxml2;make:install;link:TARGET/bin/xml2-config:HOST/bin/xml2-config
libxmlwrapp;make:install;link:TARGET/bin/xmlwrapp-config:HOST/bin/xmlwrapp-config
libz;make:install

