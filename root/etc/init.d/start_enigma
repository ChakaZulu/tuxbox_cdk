#!/bin/sh

# $Id: start_enigma,v 1.6 2005/06/10 10:49:13 saruman Exp $

camd2
unset TZ
touch /tmp/.enigma
while [ -e /tmp/.enigma ]
do
	/bin/enigma
	case "$?" in
		0)
			echo "Shutdown"
			[ -e /tmp/tuxmaild.pid ] && kill $( cat /tmp/tuxmaild.pid )
			rm /tmp/.enigma
			/sbin/halt
			;;
		2)
			echo "Restart"
			;;
		*)
			[ -e /tmp/tuxmaild.pid ] && kill $( cat /tmp/tuxmaild.pid )
			rm /tmp/.enigma
			/sbin/reboot
			;;
		esac
done
