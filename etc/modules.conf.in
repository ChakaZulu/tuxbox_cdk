# /etc/modules.conf

options avia firmware=@UCODEDIR@
options avia_gt_napi ucode=@UCODEDIR@/ucode.bin
options cam firmware=@UCODEDIR@/cam-alpha.bin
below cam avia
above i2c-core i2c-8xx

if $DEMOD = "AT76C651"
  alias tuner at76c651
elseif $DEMOD = "TDA8044H"
  alias tuner tda8044h
elseif $DEMOD = "VES1820"
  alias tuner ves1820
elseif $DEMOD = "VES1893"
  alias tuner ves1893
elseif $DEMOD = "VES1993"
  alias tuner ves1993
endif

if $mID = "01"
  options avia_gt chip_type=1
  probeall avia_gt gtx_capture gtx_pig
  alias avia_gt_fb gtx_fb
  alias avia_gt_napi gtx_dmx
  alias avia_gt_vbi gtx_vbi
else
  options avia_gt chip_type=0
  alias avia_gt_napi enx_dmx
  alias avia_gt_vbi enx_vbi
endif

