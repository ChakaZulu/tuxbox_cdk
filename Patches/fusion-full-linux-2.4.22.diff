+
+int __init
+fusion_init(void)
+{
+  int ret;
+
+  proc_fusion_dir = proc_mkdir ("fusion", NULL);
+
+  ret = fusionee_init();
+  if (ret)
+    goto error_fusionee;
+
+  ret = fusion_ref_init();
+  if (ret)
+    goto error_ref;
+
+  ret = fusion_skirmish_init();
+  if (ret)
+    goto error_skirmish;
+
+  ret = fusion_property_init();
+  if (ret)
+    goto error_property;
+
+  ret = fusion_reactor_init();
+  if (ret)
+    goto error_reactor;
+
+  ret = fusion_call_init();
+  if (ret)
+    goto error_call;
+
+  ret = misc_register (&fusion_miscdev);
+  if (ret)
+    goto error_misc;
+
+  return 0;
+
+
+ error_misc:
+  fusion_call_cleanup();
+
+ error_call:
+  fusion_reactor_cleanup();
+
+ error_reactor:
+  fusion_property_cleanup();
+
+ error_property:
+  fusion_skirmish_cleanup();
+
+ error_skirmish:
+  fusion_ref_cleanup();
+
+ error_ref:
+  fusionee_cleanup();
+
+ error_fusionee:
+  return ret;
+}
+
+void __exit
+fusion_exit(void)
+{
+  fusion_reactor_cleanup();
+  fusion_property_cleanup();
+  fusion_skirmish_cleanup();
+  fusion_ref_cleanup();
+  fusionee_cleanup();
+
+  misc_deregister (&fusion_miscdev);
+}
+
+module_init(fusion_init);
+module_exit(fusion_exit);
