+}
+
+static void
+free_all_nodes (FusionReactor *reactor)
+
+{
+  FusionLink *l = reactor->nodes;
+
+  while (l)
+    {
+      FusionLink *next = l->next;
+
+      kfree (l);
+
+      l = next;
+    }
+
+  reactor->nodes = NULL;
+}
