# install rules for cdk
# ruleset: flash
#
# look at rules-install
#

#
# core
#
glibc;make:install:install_root=TARGET;install:-m644:libc_pic.a:math/libm_pic.a:resolv/libresolv_pic.a:dlfcn/libdl_pic.a:TARGET/lib;install:-d:TARGET/lib/libc_pic;install:-m644:elf/soinit.os:TARGET/lib/libc_pic/soinit.o;install:-m644:elf/sofini.os:TARGET/lib/libc_pic/sofini.o;install:-m644:libc.map:TARGET/lib/libc_pic.map;install:-m644:libm.map:TARGET/lib/libm_pic.map;install:-m644:libdl.map:TARGET/lib/libdl_pic.map
gcc;make:install;install:-m644:TARGETNAME/libstdc++-v3/src/linker.map:TARGET/lib/libstdc++_pic.map;archive:TARGET/lib/libstdc++_pic.a:TARGETNAME/libstdc++-v3/src/.libs/*.o:TARGETNAME/libstdc++-v3/libsupc++/*.o

#
# contrib libs
#
libcrypto;install:libcrypto.so.0.9.6:TARGET/lib;link:libcrypto.so.0.9.6:TARGET/lib/libcrypto.so.0;link:libcrypto.so.0:TARGET/lib/libcrypto.so;install:libssl.so.0.9.6:TARGET/lib;link:libssl.so.0.9.6:TARGET/lib/libssl.so.0;link:libssl.so.0:TARGET/lib/libssl.so;install:libcrypto.a:TARGET/lib/libcrypto_pic.a;install:libssl.a:TARGET/lib/libssl_pic.a;install:-d:TARGET/include/openssl;make:install_cdk:INSTALL_PREFIX=TARGET:INSTALLTOP=
libfreetype;make:install:libdir=TARGET/lib:includedir=TARGET/include:bindir=TARGET/bin:prefix=TARGET;archive:TARGET/lib/libfreetype_pic.a:objs/*.lo
libncurses;make:install.libs:DESTDIR=TARGET;archive:TARGET/lib/libncurses_pic.a:obj_s/*.o
libjpeg;make:install-lib:libdir=TARGET/lib:includedir=TARGET/include;archive:TARGET/lib/libjpeg_pic.a:*.o
libpng;make:install:prefix=TARGET;archive:TARGET/lib/libpng12_pic.a:*.o
libcurl;make:install:DESTDIR=TARGET;archive:TARGET/lib/libcurl_pic.a:lib/*.lo
libpopt;make:install:DESTDIR=TARGET;archive:TARGET/lib/libpopt_pic.a:*.lo
libz;make:install:prefix=TARGET;archive:TARGET/lib/libz_pic.a:*.o

#
# include
#
>>>;rules-install
